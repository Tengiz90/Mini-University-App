<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduVerse.Pages.AddCoursePage"
             Title="Add Course">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Entry x:Name="courseNameEntry"
       Placeholder="Enter course name"/>
        <Editor Placeholder="Enter course description"
                x:Name="courseDescriptionEntry"
                HeightRequest="100" />
        <Label x:Name="AddCourseErrorMesasage" TextColor="red" />
        <Button Text="Finish" Clicked="OnAddCourseClicked"/> 
    </VerticalStackLayout>
</ContentPage>
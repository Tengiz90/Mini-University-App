<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduVerse.Pages.MainPage">


    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


        <Button 
            Text="Login"
            x:Name="loginButton"
            Margin="0,80,0,0"
            Clicked="OnLoginClicked"
            WidthRequest="200"
            BackgroundColor="#0078D7"
            TextColor="White"
            CornerRadius="20"
            HeightRequest="100"
            FontSize="18" />

        <Button 
            Text="Register"
            x:Name="registerButton"
            Clicked="OnRegisterClicked"
            WidthRequest="200"
            BackgroundColor="#4CAF50"
            TextColor="White"
            CornerRadius="20"
            HeightRequest="100"
            FontSize="18" />

    </VerticalStackLayout>
</ContentPage>
